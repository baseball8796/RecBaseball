<div class="text-center">
  <h1>チーム情報登録</h1>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @team_information, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :name, 'チーム名（必須）' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
       <div class="form-group">
        <%= f.label :region, '地域（必須）' %>
        <%= f.text_field :region, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :recruiting_people, '募集人数（必須）' %>
        <%= f.text_field :recruiting_people, class: 'form-control' %>
      </div> 
      
      <div class="form-group">
        <%= f.label :content, '本文（必須）' %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      
      <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
