<div class="text-center">
  <h1>ユーザー情報編集</h1>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @user, local: true) do |f| %>
      
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
       <div class="form-group">
        <%= f.label :age, '年齢' %>
        <%= f.text_field :age, class: 'form-control' %>歳
      </div>

      <div class="form-group">
        <%= f.label :baseball_experience, '野球経験' %>
        <%= f.text_field :baseball_experience, class: 'form-control' %>（ありorなし）
      </div> 
      
      <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
  <div class="offset-sm-8 col-sm-3 offset-sm-1 text-right pt-5 mt-5" >
      <%= link_to 'ユーザーページに戻る', @user %>
  </div>
  
</div>